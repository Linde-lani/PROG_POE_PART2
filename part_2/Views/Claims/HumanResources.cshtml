@model List<Claim>

<style>
    /* Container styling - invoice layout */
    .invoice-container {
        max-width: 1000px;
        margin: 50px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
        color: #333;
    }

    .invoice-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .invoice-title {
        font-size: 2em;
        font-weight: bold;
        color: #005f73;
    }

    .invoice-details {
        font-size: 0.9em;
    }

        .invoice-details p {
            margin: 2px 0;
        }

    /* Table styling for invoice items */
    .invoice-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
    }

        .invoice-table thead {
            background-color: #005f73;
            color: #fff;
        }

        .invoice-table th,
        .invoice-table td {
            padding: 12px 15px;
            border: 1px solid #ccc;
            text-align: left;
        }

        .invoice-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .total-row {
        font-weight: bold;
        background-color: #e0f7fa;
    }

    /* Buttons styling */
    .btn-sm {
        padding: 5px 10px;
        font-size: 0.9em;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-update {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        text-decoration: none;
    }

    .btn-reject {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-add {
        background-color: #17a2b8;
        color: #fff;
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s;
        margin-bottom: 20px;
    }

        .btn-add:hover {
            background-color: #138496;
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .back-link {
        display: inline-block;
        padding: 10px 20px;
        background-color: #6c757d;
        color: #fff;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .back-link:hover {
            background-color: #5a6268;
        }
</style>

<h2 class="claims-title">Claims Report</h2>

    <!-- Claim Details Table -->
    <table class="invoice-table">
        <thead>
            <tr>
                <th>Faculty Name</th>
                <th>Module Name</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Supporting Document</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.FacultyName</td>
                    <td>@claim.ModuleName</td>
                    <td>@claim.Hours</td>
                    <td>@claim.Rate</td>
                    <td>@claim.TotalAmount</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocuments))
                        {
                            <a href="@Url.Content("~/uploads/" + claim.SupportingDocuments)" target="_blank">View</a>
                        }
                    </td>
                    <td>
                        <!-- Edit Button -->
                        <a asp-action="Edit" asp-route-id="@claim.Id" class="btn-sm btn-update">Edit</a>
                        <!-- Delete Form -->
                        <form asp-action="Delete" asp-route-id="@claim.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn-sm btn-reject" onclick="return confirm('Are you sure you want to delete this claim?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="total-row">
                <td colspan="4">Grand Total</td>
                <td colspan="2">
                    @Model.Sum(c => c.TotalAmount).ToString("N2")
                </td>
            </tr>
        </tfoot>
    </table>

    <!-- Action Buttons -->
    <div style="margin-top:20px;">
     
        <a href="@Url.Action("Index", "Home")" class="back-link" style="margin-left:10px;">Back to Dashboard</a>
    </div>
</div>
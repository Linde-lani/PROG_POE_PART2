@model List<Claim>

<h2>Track Claims</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Faculty Name</th>
            <th>Module Name</th>
            <th>Sessions</th>
            <th>Total Amount</th>
            <th>Supporting Document</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.FacultyName</td>
                <td>@claim.ModuleName</td>
                <td>@claim.Sessions</td>
                <td>@claim.TotalAmount</td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.SupportingDocuments))
                    {
                        <a href="@Url.Content("~/uploads/" + claim.SupportingDocuments)" target="_blank">View</a>
                    }
                </td>
                <td>
                    <form method="post" asp-action="ApproveClaim" asp-route-id="@claim.Id" style="display:inline;">
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                    <form method="post" asp-action="RejectClaim" asp-route-id="@claim.Id" style="display:inline; margin-left:5px;">
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Index", "Home")">Login</a>
